# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/fintech-platform
MONGODB_TEST_URI=mongodb://localhost:27017/fintech-platform-test

# Database - Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=10
ENCRYPTION_KEY=your-32-character-encryption-key-change-me
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# External Services - Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# External Services - SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@fintech-platform.com
SENDGRID_FROM_NAME=Fintech Platform

# External Services - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# External Services - AWS S3 (for KYC documents)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fintech-kyc-documents

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:19006
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=your-session-secret-change-in-production
SESSION_NAME=fintech.sid
SESSION_MAX_AGE=86400000

# Card Generation
CARD_BIN_PREFIX=411111
CARD_ISSUER_NAME=FinTech Network

# Transaction Limits
DEFAULT_DAILY_LIMIT=5000
DEFAULT_MONTHLY_LIMIT=20000
DEFAULT_TRANSACTION_LIMIT=2000

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_RISK_THRESHOLD=0.7
FRAUD_MAX_TRANSACTIONS_PER_MINUTE=5

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-for-external-services

# Admin
ADMIN_EMAIL=admin@fintech-platform.com
ADMIN_PASSWORD=change-this-secure-password-in-production

# Features Flags
ENABLE_PHYSICAL_CARDS=false
ENABLE_INTERNATIONAL_TRANSFERS=false
ENABLE_CRYPTO_INTEGRATION=false

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!
