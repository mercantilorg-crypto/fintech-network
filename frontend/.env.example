# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# App Configuration
NEXT_PUBLIC_APP_NAME=Fintech Platform
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Authentication
NEXT_PUBLIC_JWT_STORAGE_KEY=fintech_auth_token
NEXT_PUBLIC_JWT_REFRESH_KEY=fintech_refresh_token

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# External Services - Stripe
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# External Services - Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your_google_maps_api_key

# External Services - Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# External Services - Sentry
NEXT_PUBLIC_SENTRY_DSN=

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Upload Limits
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Card Display
NEXT_PUBLIC_MASK_CARD_NUMBER=true
NEXT_PUBLIC_SHOW_CVV=false

# Environment
NEXT_PUBLIC_ENV=development

# Build
ANALYZE=false
